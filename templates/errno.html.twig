{% if errno is defined %}
	{% if errno != '' and (errno|length > 0) %} {# CONTROLAR SI LLEGA UN ARREGLO VACIO #}
	    {% if errno.malo %}
	    	<div class="well text-center row">
	    	    {% for each in errno.malo %}
	            	<h3 style="color:#FF7479;"><strong>{{ each }}</strong></h3>
	        	{% endfor %}
    		</div>
    	{% endif %}
    	{% if errno.bueno %}
	    	<div class="well text-center row">
	    		{% for each in errno.bueno %}
	            	<h3 style="color:#696969;"><strong>{{ each }}</strong></h3>
	        	{% endfor %}
			</div>
		{% endif %}
	{% endif %}
{% endif %}