{% extends "base_session.html.twig" %}

{% block title %}
Lista de vehiculos
{% endblock %}

{% block container %}
<div class="container">
<div class="row">
<div class="col-sm-12 col-sm-offset-0 text-center well">
{% if vehiculos %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Marca</th>
      <th scope="col">Modelo</th>
      <th scope="col">Color</th>
      <th scope="col">Patente</th>
      <th scope="col">Tipo ID</th>
      <th scope="col">Asientos</th>
      <th scope="col">Modificar</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>

	{% for vehiculo in vehiculos %}
	<tr>
		<td>{{ vehiculo.marca }}</td>
		<td>{{ vehiculo.modelo }}</td>
		<td>{{ vehiculo.color }}</td>
		<td>{{ vehiculo.patente }}</td>
		<td>{{ vehiculo.tipo_id }}</td>
		<td>{{ vehiculo.asientos }}</td>
		<td><a class="btn btn-primaryPink" href="">Modificar</a></td>
		<td><a class="btn btn-primaryPink" href="">Eliminar</a></td>
    </tr>
	{% endfor %} 
  </tbody>
</table>
{% else %}
	<h1>No hay vehiculos para mostrar</h1>
{% endif %}

</div>
</div>
</div>

{% endblock %}
