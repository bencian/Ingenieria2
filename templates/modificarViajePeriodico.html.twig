{% extends "base_session.html.twig" %}

{% block title %}
Inicio
{% endblock %}

{% block stylesheets %}
<script src="./templates/js/publicarViaje.js"></script>
{% endblock %}

{% block container %}

<div class="container">
	<div class="row">
		<div class="col-sm-12 col-sm-offset-0 text-center well">

			<form method="post" action="./?action=crear_viajePeriodico">
				<div class="form-group">
					<p class="text-align: center h3"> Crear viaje periodico</p>
					<br>
					<label for="">Fecha</label>
					<input type="date" class="form-control" id="fecha" name="fecha" placeholder="Fecha" required>
				</div>
				<div class="form-group">
					<label for="">Precio</label>
					<input type="text" class="form-control" id="precio" name="precio" placeholder="Precio" required>
				</div>

				<div class="form-group">
					<label for="">Hora de salida</label>
					<input type="text" class="form-control" id="hora_salida" name="hora_salida" placeholder="Hora de salida" required>
				</div>
				<div class="form-group">
					<label for="">Duracion</label>
					<input type="text" class="form-control" id="duracion" name="duracion" placeholder="Duracion" required>
				</div>

				<div class="form-group">
					<label for="">Distancia</label>
					<input type="text" class="form-control" id="duracion" name="duracion" placeholder="Distancia" required>
				</div>
				<div class="form-group">
					<label for="">Asientos</label>
					<input type="text" class="form-control" id="asientos" name="asientos" placeholder="Asientos" required>
				</div>		
				<div class="form-group">
					<label for="">Origen</label>
					<select class="form-control" id="origen" name="origen" required>
						{% if vectorForm is defined %} 
							{% for each in vectorForm.ciudades %}
								<option value="{{ each.id }}">{{ each.nombre }}</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>	
				<div class="form-group">
					<label for="">Destino</label>
					<select class="form-control" id="destino" name="destino">
						{% if vectorForm is defined %} 
							{% for each in vectorForm.ciudades %}
								<option value="{{ each.id }}">{{ each.nombre }}</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Vehiculo</label>
					<select class="form-control" id="vehiculo" name="vehiculo" required>
						{% if vectorForm is defined %} 
							{% for each in vectorForm.vehiculos %}
								<option value="{{ each.id }}">{{ each.marca }} - {{ each.patente }} - con {{ each.asientos }} asientos</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Fecha final</label>
					<input type="date" class="form-control" id="final" name="final" placeholder="Fecha" required>
				</div>
				<div class="form-group">
					<label for="">Dias</label>
					<div class="checkbox">
						<label><input type="checkbox" id="lunes" value="">Lunes</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" id="martes" value="">Martes</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" id="miercoles" value="">Miercoles</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" id="jueves" value="">Jueves</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" id="viernes" value="">Viernes</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" id="sabado" value="">Sabado</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" id="domingo" value="">Domingo</label>
					</div>
				</div>
				<div class="form-group">
					<label for="">Comentarios</label>
					<input type="textarea" class="form-control" id="comentarios" name="comentarios" placeholder="comentarios" required>
				</div>	
				<cr>
				<button type="submit" class="btn btn-primaryPink">Submit</button>
			</form>

		</div>
	</div>
</div>


{% endblock %}