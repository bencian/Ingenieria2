{% extends "base_session.html.twig" %}

{% block title %}
Inicio
{% endblock %}

{% block stylesheets %}
<script src="./templates/js/publicarViaje.js"></script>
{% endblock %}

{% block container %}
{% if viaje is defined %}
<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4 text-center well">

			<form method="post" action="./?action=modificarViajeOcasional" onsubmit="return validarDatos()">
				<div class="form-group">
					<p class="text-align: center h3"> Modificar viaje ocasional</p>
					<br>
					<label for="">Fecha</label>
					<input type="date" class="form-control" id="fecha" name="fecha" value="{{ viaje.0.fecha }}" required>
				</div>
				<div class="form-group">
					<label for="">Precio</label>
					<input type="text" class="form-control" id="precio" name="precio"  required value="{{ viaje.0.precio }}">
				</div>

				<div class="form-group">
					<label for="">Hora de salida</label>
					<input type="text" class="form-control" id="hora_salida" name="hora_salida"  required value="{{ viaje.hora_salida }}">
				</div>
				<div class="form-group">
					<label for="">Duracion</label>
					<input type="text" class="form-control" id="duracion" name="duracion" required value="{{ viaje.0.duracion }}">
				</div>

				<div class="form-group">
					<label for="">Distancia</label>
					<input type="text" class="form-control" id="distancia" name="distancia" required value="{{ viaje.0.distancia }}">
				</div>

			{% if vehiculo is defined %} 
            	{% for each in vehiculo %}
                {% if each.nombre!=""%}
	                  {% if vehiculo.0.tipo_id==each.id %}
	                    <option selected="true" value={{ each.id }}>{{ each.nombre }}</option>
	                  {% else %}
	                    <option value={{ each.id }}>{{ each.nombre }}</option>
	                  {% endif %}
                {% endif %}
              {% endfor %}
            {% endif %}
				<div class="form-group">
					<label for="">Origen</label>
					<select class="form-control" id="origen" name="origen" required>
						{% if vectorForm is defined %} 
							{% for each in vectorForm.ciudades %}
				                {% if viaje.0.id_origen==each.id %}
				                    <option selected="true" value={{ each.id }}>{{ each.nombre }}</option>
				                {% else %}
				                  	<option value={{ each.id }}>{{ each.nombre }}</option>
				                {% endif %}
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Destino</label>
					<select class="form-control" id="destino" name="destino">
						{% if vectorForm is defined %} 
							{% for each in vectorForm.ciudades %}
				                {% if viaje.0.id_destino==each.id %}
				                    <option selected="true" value={{ each.id }}>{{ each.nombre }}</option>
				                {% else %}
				                  	<option value={{ each.id }}>{{ each.nombre }}</option>
				                {% endif %}							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Vehiculo</label>
					<select class="form-control" id="vehiculo" name="vehiculo" required>
						{% if vectorForm is defined %} 
							{% for each in vectorForm.vehiculos %}
								{% if viaje.0.vehiculo_id==each.id %}
				                    <option selected="true" value={{ each.id }}>{{ each.marca }} - {{ each.patente }} - con {{ each.asientos }} asientos</option>
				                {% else %}
				                  	<option value={{ each.id }}>{{ each.marca }} - {{ each.patente }} - con {{ each.asientos }} asientos</option>
				                {% endif %}
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Comentarios</label>
					<input type="textarea" class="form-control" id="comentarios" name="comentarios" value="{{ viaje.0.comentarios }}">
				</div>	
				<cr>
				<input type="hidden" name="id" value="{{ viaje.0.id }}">
				<button type="submit" class="btn btn-primaryPink">Aceptar</button>
			</form>
		</div>
		</div>
	</div>
</div>

{% endif %}
{% endblock %}