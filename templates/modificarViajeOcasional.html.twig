{% extends "base_session.html.twig" %}

{% block title %}
Inicio
{% endblock %}

{% block stylesheets %}
<script src="./templates/js/publicarViaje.js"></script>
{% endblock %}

{% block container %}

<div class="container">
	<div class="row">
		<div class="col-sm-12 col-sm-offset-0 text-center well">

			<form method="post" action="./?action=modificarViajeOcasional" onsubmit="return validarDatos()">
				<div class="form-group">
					<p class="text-align: center h3"> Crear viaje ocasional</p>
					<br>
					<label for="">Fecha</label>
					<input type="date" class="form-control" id="fecha" name="fecha" placeholder="Fecha" required value="{{ viaje.fecha }}">
				</div>
				<div class="form-group">
					<label for="">Precio</label>
					<input type="text" class="form-control" id="precio" name="precio" placeholder="Precio" required value="{{ viaje.Precio }}">
				</div>

				<div class="form-group">
					<label for="">Hora de salida</label>
					<input type="text" class="form-control" id="hora_salida" name="hora_salida" placeholder="Hora de salida" required value="{{ viaje.hora_salida }}">
				</div>
				<div class="form-group">
					<label for="">Duracion</label>
					<input type="text" class="form-control" id="duracion" name="duracion" placeholder="Duracion" required value="{{ viaje.duracion }}">
				</div>

				<div class="form-group">
					<label for="">Distancia</label>
					<input type="text" class="form-control" id="duracion" name="duracion" placeholder="Distancia" required value="{{ viaje.distancia }}">
				</div>
	<!--			<div class="form-group">
					<label for="">Asientos</label>
					<input type="text" class="form-control" id="asientos" name="asientos" placeholder="Asientos" required value="{{ viaje.fecha }}">
				</div>	-->
				<div class="form-group">
					<label for="">Origen</label>
					<select class="form-control" id="origen" name="origen" required>
						{% if vectorForm is defined %} 
							{% for each in vectorForm.ciudades %}
								<option value="{{ each.id }}">{{ each.nombre }}</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Destino</label>
					<select class="form-control" id="destino" name="destino">
						{% if vectorForm is defined %} 
							{% for each in vectorForm.ciudades %}
								<option value="{{ each.id }}">{{ each.nombre }}</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Vehiculo</label>
					<select class="form-control" id="vehiculo" name="vehiculo" required>
						{% if vectorForm is defined %} 
							{% for each in vectorForm.vehiculos %}
								<option value="{{ each.id }}">{{ each.marca }} - {{ each.patente }} - con {{ each.asientos }} asientos</option>
							{% endfor %}
						{% endif %}
					</select>
				</div>
				<div class="form-group">
					<label for="">Comentarios</label>
					<input type="textarea" class="form-control" id="comentarios" name="comentarios" placeholder="comentarios" required value="">
				</div>	
				<cr>
				<input type="hidden" name="id" value="{{ viaje.id }}">
				<button type="submit" class="btn btn-primaryPink">Submit</button>
			</form>

		</div>
	</div>
</div>


{% endblock %}