{% extends "base.html.twig" %}

{% block stylesheets %}
<script src="./templates/js/validacionRegistro.js"></script>
{% endblock %}

{% block container %}
<nav class="nav" id="navbar">
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link active" href="index.php">Inicio</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="index.php?action=login">Login</a>
  </li>
  <li class="nav-item" id="register">
    <a class="nav-link disabled" href="index.php?action=registrarse">Registrarse</a>


</ul>
</nav>

<div class="container">
<form class="col-lg-4" method="post" action="./?action=actualizar_perfil">
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="email"  class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="Ingresa tu email!" 
	{% if campoPerfil is defined %} 
		value="{{ campoPerfil.email }}"
	{% endif %}>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Nombre</label>
    <input type="text"  class="form-control" id="nombre" name="nombre" placeholder="Nombre"
	{% if campoPerfil is defined %} 
		value="{{ campoPerfil.nombre }}"
	{% endif %}>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Apellido</label>
    <input type="text"  class="form-control" id="apellido" name="apellido" placeholder="Apellido"
	{% if campoPerfil is defined %} 
		value="{{ campoPerfil.apellido }}"
	{% endif %}>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Fecha de nacimiento</label>
    <input type="date"  class="form-control" id="nacimiento" name="nacimiento" placeholder="Fecha de nacimiento"
	{% if campoPerfil is defined %} 
		value="{{ campoPerfil.fecha_nacimiento }}"
	{% endif %}>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Contraseña</label>
    <input type="password"  class="form-control" id="pass" name="pass" placeholder="Contraseña nueva"
	{% if campoPerfil is defined %} 
		value="{{ campoPerfil.password }}"
	{% endif %}>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Repita la contraseña</label>
    <input type="password"  class="form-control" id="pass1" name="pass1" placeholder="Repita la contraseña nueva"
	{% if campoPerfil is defined %} 
		value="{{ campoPerfil.password }}"
	{% endif %}>
  </div>

    <div class="form-group">
    <label for="exampleInputPassword1">Ingresa la contraseña actual</label>
    <input type="password"  class="form-control" id="oldPass" name="oldPass" placeholder="Ingresa la contraseña actual" required>
  </div>
 
  <input type="submit" class="btn btn-primaryPink" value='Registrarme'>
</form>
</div>
{% endblock %}